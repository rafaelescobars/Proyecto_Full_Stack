{{#if userType}}
  {{>adminNavbar}}
{{else}}
  {{>navbar}}
{{/if}}

<div class="container d-flex justify-content-center mt-3">
  <h1>Editar Usuario</h1>
  <br>
  <h2 class="d-none" >{{user.id}}</h2>
</div>

<div class="container my-3 mx-0">
  <div class="row row-cols-3">
    <div class="col-md-3">

    </div>
    <div class="col-12 col-md-6">
      <form onsubmit="editUserPut(event)">
        <div class="mb-3">
          <label for="" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp" value="{{user.email}}"
            required
          />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" value="{{user.password}}" required />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Repita Password</label>
          <input type="password" class="form-control" id="password2" value="{{user.password}}" required />
        </div>
        <div class="d-flex justify-content-center">
          <button
            class="btn btn-secondary"
          >Aceptar</button>
        </div>
      </form>
    </div>
    <div class="col-md-3">

    </div>
  </div>

</div>