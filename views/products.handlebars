{{#if userType}}
  {{>adminNavbar}}
{{else}}
  {{>navbar}}
{{/if}}

<h1 class="d-flex justify-content-center">Productos</h1>

<div class="table-responsive container">
  <table class="table table-dark table-hover table-striped align-middle">
    <thead>
      <tr>
        <td >Nombre</td>
        <td >Descripción</td>
        <td >Dueño</td>
        <td >Precio</td>
        <td >Acción</td>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.owner}}</td>
        <td class="price">{{this.price}}</td>
        <td>
          <a href="/products/edit/{{this.id}}" type="button" class="btn btn-primary">
            Editar
          </a>
          <a onclick="deleteProductClick(event,{{this.id}})" type="button" class="btn btn-danger">
            Eliminar
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="container d-flex justify-content-center">
  <a href="/products/new" class="btn btn-secondary ">Nuevo Producto</a>
</div>

