{{#if userType}}
  {{>adminNavbar}}
{{else}}
  {{>navbar}}
{{/if}}

<h1 class="d-flex justify-content-center">Mesa {{localTable}}</h1>
<h2 class="d-none">{{localTable}}</h2>
<h3 class="d-none">{{saleId}}</h3>

<div class="container d-flex justify-content-center mt-3">
  <h1>Agregar Producto</h1>
</div>

<div class="container my-3 mx-0">
  <div class="row row-cols-3">
    <div class="col-md-3">

    </div>
    <div class="col-12 col-md-6">
      <form onsubmit="newProductTablePost(event)">
        <div class="mb-3">
          <label for="" class="form-label">Producto</label>
          <select class="form-select " name="owner" id="productId" aria-label="Default select example" onchange="getProductPrice()" >
            {{#each products}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Cantidad</label>
          <input type="number" class="form-control" id="productQuantity" required />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Precio</label>
          <input type="number" class="form-control" id="productPrice" required />
        </div>
        <div class="d-flex justify-content-center">
          <button
            class="btn btn-secondary"
          >Aceptar</button>
        </div>
      </form>
    </div>

    <div class="col-md-3">
      
    </div>

  </div>

</div>

    <script src="/js/newProductTable.js"></script>
